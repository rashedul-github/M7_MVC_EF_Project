@model Models.Project
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.ProjectId)
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header" style="background-color:#ffd868;">
            <h3>Are you sure to delete this?</h3>
        </div>
        <div class="card-body" style="background-color:#7fcd91;">
            <h5 class="card-title">
                Project Id: @Model.ProjectId<br />
                Project Name: @Model.ProjectName<br />
                Client Name: @Model.Client.ClientName
            </h5>
            <p class="card-link">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"> Delete</i></button>
            </p>
            <a href="@Url.Action("Index","Clients")" class="card-link">Back to list</a>
        </div>
    </div>
}
