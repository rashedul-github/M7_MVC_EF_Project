@model Models.Project
@using Models;
@{
    ViewBag.Title = "Create";
}

<h4 class="alert alert-light">Add Project</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        @Html.LabelFor(x => x.ProjectName, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.ProjectName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.ClientId, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.ClientId, new SelectList(ViewBag.Client, "ClientId", "ClientName"), "-Select-", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.ClientId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> save</i></button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <a href="@Url.Action("Index","Projects")" class="btn-link"> Back to list</a>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}