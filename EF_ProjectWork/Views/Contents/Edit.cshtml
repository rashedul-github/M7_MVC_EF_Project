@model Models.Content
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.ContentId)
    <div class="form-group row">
        @Html.LabelFor(x => x.ClientId, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.ClientId, new SelectList(ViewBag.Client, "ClientId", "ClientName"), "-Select-", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.ClientId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.ProjectId, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.ProjectId, new SelectList(ViewBag.Project, "ProjectId", "ProjectName"), "-Select-", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.ProjectId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.WorkCarriedOut, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.WorkCarriedOut, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.WorkCarriedOut, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.EstimatedCost, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.EstimatedCost, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.EstimatedCost, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.StartDate, new { @class = "col-form-label col-form-label-sm col-2 text-right" })
        <div class="col-4">
            <div class="input-group" id="join">
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control form-control-sm", @placeholder = "yyyy-mm-dd",@type="date" })
                <div class="input-group-append">
                    <span class="input-group-text" id="basic-addon2"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
            </div>
            @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.EndDate, new { @class = "col-form-label col-form-label-sm col-2 text-right" })
        <div class="col-4">
            <div class="input-group" id="join1">
                @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control form-control-sm", @placeholder = "yyyy-mm-dd", @type = "date" })
                <div class="input-group-append">
                    <span class="input-group-text" id="basic-addon2"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
            </div>
            @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> save</i></button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <a href="@Url.Action("Index","Contents")" class="btn-link"> Back to list</a>
        </div>
    </div>
}

@section styles{

    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(() => {
            $("#join input").datepicker(
                {
                    format: "yyyy-mm-dd"
                }
            );
        });
        $(document).ready(() => {
            $("#join1 input").datepicker(
                {
                    format: "yyyy-mm-dd"
                }
            );
        });
    </script>
}

