@model Models.Client
@{
    ViewBag.Title = "Edit";
}

<h4 class="alert alert-light">Edit Client</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ClientId)
    <div class="form-group row">
        @Html.LabelFor(x => x.ClientName, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.ClientName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> save</i></button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <a href="@Url.Action("Index","Clients")" class="btn-link"> Back to list</a>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
